@model IEnumerable<Herramientas_Pro.Models.Fabricacion>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4 text-center">Fabricación</h1>

<div class="d-flex justify-content-between align-items-center my-3">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
    <div class="btn-group" role="group" aria-label="Ordenar por">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Ordenar por
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ProyectoAsc">Proyecto (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ProyectoDesc">Proyecto (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ClienteAsc">Cliente (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ClienteDesc">Cliente (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="DiseñoAsc">Diseño (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="DiseñoDesc">Diseño (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="VidrioAsc">Vidrio (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="VidrioDesc">Vidrio (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="BarandaAsc">Baranda (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="BarandaDesc">Baranda (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ZancasAsc">Zancas (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ZancasDesc">Zancas (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="MontajesAsc">Montajes (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="MontajesDesc">Montajes (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="PlottersAsc">Plotters (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="PlottersDesc">Plotters (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="PeldañosAsc">Peldaños (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="PeldañosDesc">Peldaños (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="GuiaAsc">Guia (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="GuiaDesc">Guia (Descendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="TornilleriaAsc">Tornilleria (Ascendente)</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-orden="TornilleriaDesc">Tornilleria (Descendente)</a></li>
        </ul>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Proyecto)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.Diseño)</th>
                <th>@Html.DisplayNameFor(model => model.Vidrio)</th>
                <th>@Html.DisplayNameFor(model => model.Baranda)</th>
                <th>@Html.DisplayNameFor(model => model.Zancas)</th>
                <th>@Html.DisplayNameFor(model => model.Montajes)</th>
                <th>@Html.DisplayNameFor(model => model.Plotters)</th>
                <th>@Html.DisplayNameFor(model => model.Peldaños)</th>
                <th>@Html.DisplayNameFor(model => model.Guia)</th>
                <th>@Html.DisplayNameFor(model => model.Tornilleria)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Proyecto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.Diseño)</td>
                    <td>@Html.DisplayFor(modelItem => item.Vidrio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Baranda)</td>
                    <td>@Html.DisplayFor(modelItem => item.Zancas)</td>
                    <td>@Html.DisplayFor(modelItem => item.Montajes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Plotters)</td>
                    <td>@Html.DisplayFor(modelItem => item.Peldaños)</td>
                    <td>@Html.DisplayFor(modelItem => item.Guia)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tornilleria)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
