@model IEnumerable<Herramientas_Pro.Models.Pedidos>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="my-4 text-center">Pedidos</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Registro
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Presupuestos)</th>
                    <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>@Html.DisplayNameFor(model => model.Medicion)</th>
                    <th>@Html.DisplayNameFor(model => model.Nube_Puntos)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.Diseño_Inicial)</th>
                    <th>@Html.DisplayNameFor(model => model.Fimra)</th>
                    <th>@Html.DisplayNameFor(model => model.Otros)</th>
                    <th>@Html.DisplayNameFor(model => model.Responsable)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Presupuestos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medicion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nube_Puntos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Diseño_Inicial)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fimra)</td>
                        <td>@Html.DisplayFor(modelItem => item.Otros)</td>
                        <td>@Html.DisplayFor(modelItem => item.Responsable)</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm me-2">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>