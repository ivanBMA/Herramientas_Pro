@model IEnumerable<Herramientas_Pro.Models.Entradas_Salidas>

@{
    ViewData["Title"] = "Entradas & Salidas";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 display-6">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Registro
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.Producto)</th>
                    <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Unidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.Firma)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <div class="py-4">
                                <i class="bi bi-box-arrow-in-right fs-1"></i>
                                <p class="mt-2">No hay registros de entradas o salidas disponibles en este momento.</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Unidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                            <td>@Html.DisplayFor(modelItem => item.Firma)</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm me-2">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
