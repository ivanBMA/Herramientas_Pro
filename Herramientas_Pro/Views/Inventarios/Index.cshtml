@model IEnumerable<Herramientas_Pro.Models.Inventario>

@{
    ViewData["Title"] = "Gestión de Inventario";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 display-6 fw-bold">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Registro
        </a>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-filter"></i> Ordenar por
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ProductoAsc">Producto (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ProductoDesc">Producto (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Codigo_ProductoAsc">Codigo_Producto (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Codigo_ProductoDesc">Codigo_Producto (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="stockAsc">stock (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="stockDesc">stock (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="UnidadAsc">Unidad (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="UnidadDesc">Unidad (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Cantidad_MinimaAsc">Cantidad_Minima (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Cantidad_MinimaDesc">Cantidad_Minima (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Unidad2Asc">Unidad2 (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="Unidad2Desc">Unidad2 (Descendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ComprarAsc">Comprar (Ascendente)</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-orden="ComprarDesc">Comprar (Descendente)</a></li>
            </ul>
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Producto)</th>
                    <th>@Html.DisplayNameFor(model => model.Codigo_Producto)</th>
                    <th>@Html.DisplayNameFor(model => model.stock)</th>
                    <th>@Html.DisplayNameFor(model => model.Unidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Cantidad_Minima)</th>
                    <th>@Html.DisplayNameFor(model => model.Unidad2)</th>
                    <th>@Html.DisplayNameFor(model => model.Comprar)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            <div class="py-4">
                                <i class="bi bi-box-seam fs-1"></i>
                                <p class="mt-2">No hay registros de inventario disponibles.</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Codigo_Producto)</td>
                            <td>@Html.DisplayFor(modelItem => item.stock)</td>
                            <td>@Html.DisplayFor(modelItem => item.Unidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad_Minima)</td>
                            <td>@Html.DisplayFor(modelItem => item.Unidad2)</td>
                            <td>@Html.DisplayFor(modelItem => item.Comprar)</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm me-2">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
